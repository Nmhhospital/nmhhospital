<title>NMH Hospital</title>

<style>
body{
  margin:0;
  font-family:Arial,Helvetica,sans-serif;
  background:#f5f7fa;
  color:#333;
}
header{
  background:#0b3c78;
  color:white;
  text-align:center;
  padding:20px 10px;
}
header img{
  height:60px;
  margin-bottom:10px;
}
nav{
  background:#062b57;
  text-align:center;
  padding:10px;
}
nav a{
  color:white;
  margin:0 10px;
  text-decoration:none;
  font-weight:bold;
}
section{
  padding:40px 20px;
  max-width:1000px;
  margin:auto;
}
h2{
  text-align:center;
  color:#0b3c78;
  margin-bottom:20px;
}
.specialities{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
  gap:15px;
}
.box{
  background:white;
  padding:15px;
  border-radius:10px;
  box-shadow:0 2px 6px rgba(0,0,0,0.1);
  text-align:center;
  font-weight:bold;
}
video{
  width:100%;
  border-radius:10px;
}
.gallery{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(150px,1fr));
  gap:10px;
}
.gallery img{
  width:100%;
  border-radius:10px;
}
.map iframe{
  width:100%;
  height:350px;
  border:0;
  border-radius:10px;
}
.contact{
  text-align:center;
  background:#eef2f7;
  padding:30px 15px;
  border-radius:10px;
}
.buttons a{
  display:inline-block;
  margin:10px;
  padding:15px 25px;
  border-radius:30px;
  color:white;
  font-weight:bold;
  text-decoration:none;
}
.call{background:#0b3c78;}
.whatsapp{background:#25D366;}
footer{
  background:#062b57;
  color:white;
  text-align:center;
  padding:15px;
  margin-top:30px;
}

/* Appointment form */
form{
  background:white;
  padding:25px;
  border-radius:10px;
  box-shadow:0 2px 6px rgba(0,0,0,0.1);
}
input,select,textarea{
  width:100%;
  padding:12px;
  margin-bottom:15px;
  border-radius:5px;
  border:1px solid #ccc;
}
button{
  background:#0b3c78;
  color:white;
  border:none;
  padding:15px;
  width:100%;
  border-radius:30px;
  font-size:16px;
  cursor:pointer;
}

/* Floating WhatsApp */
.float-whatsapp{
  position:fixed;
  bottom:20px;
  right:20px;
  background:#25D366;
  color:white;
  padding:15px 18px;
  border-radius:50%;
  font-size:24px;
  text-decoration:none;
  box-shadow:0 4px 8px rgba(0,0,0,0.3);
}
</style>
</head>

